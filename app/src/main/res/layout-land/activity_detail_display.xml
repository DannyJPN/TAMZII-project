<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDisplayActivity">

    <LinearLayout
        android:layout_width="729dp"
        android:layout_height="409dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tb_childnamedisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <TextView
                android:id="@+id/tb_childsurnamedisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <TextView
                android:id="@+id/tb_childregnumdisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <TextView
                android:id="@+id/tb_groupnamedisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <TextView
                android:id="@+id/tb_childinsuranccompanydisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <TextView
                android:id="@+id/tb_childbirthdatedisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_photodisplay"
            android:layout_width="408dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />











    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>